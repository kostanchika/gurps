{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "MongoConnection": "mongodb://mongo_communication:mongo_password@CommunicationServiceMongo:27017/admin"
  },
  "Users": {
    "GrpcServerUrl": "http://usersservice:8090"
  },
  "Mongo": {
    "Database": "mongocommunicationdb"
  },
  "Attachment": {
    "StaticPath": "/attachments",
    "SavePath": "wwwroot/attachments"
  },
  "AllowedOrigins": [
    "http://localhost:5173"
  ],
  "RabbitMQ": {
    "Host": "rabbitmq",
    "User": "gurps",
    "Password": "gurps_password",
    "Queue": "notifications"
  },
  "Elastic": {
    "Uri": "tcp://logstash:5044"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "AllowedHosts": "*"
}
